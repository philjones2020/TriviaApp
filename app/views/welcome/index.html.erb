<div class="header">
	<h1>Trivial Trivia</h1>
	<!--<img src="images/TrivaPic.jpg">-->
	<h2>A fun trivia website</h2>
</div>

<ul>
	<li><%= link_to 'Home', controller: 'welcome' %></li>
	<li><%= link_to 'Create Questions', action: 'new', controller: 'questions' %></li>
	<li><%= link_to 'Leaderbords', action: 'leaderboards', controller: 'welcome' %></li>
	<% if current_user %>
	<li style="float: right"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
	<li style="float: right"><%= link_to 'Profile', action: 'profile', controller: 'welcome' %></li>
	<% else %>
	<li style="float: right"><%= link_to 'Sign In', new_user_session_path %></li>
	<li style="float: right"><%= link_to 'Sign Up', new_user_registration_path %></li>
	<% end %>
</ul>

<div class="category-grid">
	<%= link_to action: "sports", controller: 'quiz', :class=>"grid-element" do %>
		<%= image_tag 'sports.png', :class=>"grid-element" %>
	<% end %>
	<%= link_to action: "music", controller: 'quiz', :class=>"grid-element" do %>
		<%= image_tag('music.png') %>
	<% end %>
	<%= link_to action: "entertainment", controller: 'quiz', :class=>"grid-element" do %>
		<%= image_tag('entertainment.png') %>
	<% end %>
	<%= link_to action: "science", controller: 'quiz', :class=>"grid-element" do %>
		<%= image_tag('science.jpg') %>
	<% end %>
</div>
