<div class="header">
	<h1>Trivial Trivia</h1>
	<!--<img src="images/TrivaPic.jpg">-->
	<h2>A fun trivia website</h2>
</div>

<ul>
	<li><%= link_to 'Home', controller: 'welcome' %></li>
	<li><%= link_to 'Create Questions', action: 'new', controller: 'questions' %></li>
	<% if current_user %>
	<li style="float: right"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
	<% else %>
	<li style="float: right"><%= link_to 'Sign In', new_user_session_path %></li>
	<li style="float: right"><%= link_to 'Sign Up', new_user_registration_path %></li>
	<% end %>
</ul>

<div class="category-grid">
	<h1> Select from a category</h1>
	<div class="row">
		<div class="column"><%= link_to 'Sports', action: 'sports', controller: 'quiz' %></div>
		<div class="column"><%= link_to 'Music', action: 'music', controller: 'quiz' %></div>
		<div class="column"><%= link_to 'Entertainment', action: 'entertainment', controller: 'quiz' %></div>
		<div class="column"><%= link_to 'Science', action: 'science', controller: 'quiz' %></div>
	</div>
</div>
